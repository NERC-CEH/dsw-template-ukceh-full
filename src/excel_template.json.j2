            },
        ],
    },
    "data": [
        {
            "type": "cell",
            "subtype": "string",
            "cell": "A1",
            "value": "Project Name",
            "format": "headingLeftTop",
        },
        {
            "type": "cell",
            "subtype": "string",
            "cell": "B1",
            "value": mapping.metaDataDeclarations.projectName,
            "format": "content",
        },
        {
            "type": "cell",
            "subtype": "string",
            "cell": "A2",
            "value": "Project Number",
            "format": "headingLeftTop",
        },
        {
            "type": "cell",
            "subtype": "string",
            "cell": "B2",
            "value": mapping.metaDataDeclarations.projectNumber,
            "format": "content",
        },
        {
            "type": "cell",
            "subtype": "string",
            "cell": "A3",
            "value": "Project Start Date",
            "format": "headingLeftTop",
        },
        {
            "type": "cell",
            "subtype": "string",
            "cell": "B3",
            "value": mapping.metaDataDeclarations.projectStart,
            "format": "content",
        },
        {
            "type": "cell",
            "subtype": "string",
            "cell": "A4",
            "value": "Project End Date",
            "format": "headingLeftTop",
        },
        {
            "type": "cell",
            "subtype": "string",
            "cell": "B4",
