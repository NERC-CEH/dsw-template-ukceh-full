        {
            "type": "cell",
            "subtype": "string",
            "cell": "A8",
            "value": "Current Phase",
            "format": "headingLeftTop",
        },
        {
            "type": "cell",
            "subtype": "string",
            "cell": "B8",
            "value": mapping.metaDataDeclarations.currentPhase,
            "format": "content",
        },                        
    ],
} -%}

{%- set data = [
    {
    "type": "row",
    "subtype": "string",
    "cell": "A1",
    "data":  ["Title","Description","ID","License","Size","IPR","Type of Data","Is data derived",
                "Date generated","Long Term Preservation Plan","Deposit date (must be before grant end)",
                "Embargo","Repository","Person responsible"
                ],
    "format": "centerHead",
    }
] -%}



{%- for declaration in mapping.declarations -%}
    {%- do data.extend([
        {
            "type": "cell",
            "subtype": "string",
            "col": 0,
            "row": 0 + loop.index,
            "value": declaration.datasetTitleReply,
            "format": "gridName",
        },
        {
            "type": "cell",
            "subtype": "string",
            "col": 1,
            "row": 0 + loop.index,
            "value": declaration.datasetDescriptionReply,
            "format": "gridName",
        },
        {
            "type": "cell",
            "subtype": "string",
            "col": 2,
            "row": 0 + loop.index,
            "value": declaration.datasetIDReply,
            "format": "gridName",
        },
        {
            "type": "cell",
            "subtype": "string",
            "col": 3,
            "row": 0 + loop.index,
            "value": declaration.datasetLicenceTypeReplySplit,
            "format": "gridName",
        },
        {
            "type": "cell",
            "subtype": "string",
            "col": 4,
            "row": 0 + loop.index,
            "value": declaration.datasetSizeReply,
            "format": "gridName",
        },
        {
            "type": "cell",
            "subtype": "string",
            "col": 5,
            "row": 0 + loop.index,
            "value": declaration.datasetOwnerReply,
            "format": "gridName",
        },
        {
            "type": "cell",
            "subtype": "string",
            "col": 6,
            "row": 0 + loop.index,
            "value": declaration.EnvDataOrInfoProduct,
            "format": "gridName",
        },
        {
            "type": "cell",
            "subtype": "string",
            "col": 7,
            "row": 0 + loop.index,
            "value": declaration.datasetExistingDataReply,
            "format": "gridName",
        },
        {
            "type": "cell",
            "subtype": "string",
            "col": 8,
            "row": 0 + loop.index,
            "value": declaration.datasetDateGeneratedReply,
            "format": "gridName",
        },
        {
            "type": "cell",
            "subtype": "string",
            "col": 9,
            "row": 0 + loop.index,
            "value": declaration.longTermPlanReply,
            "format": "gridName",
        },
        {
            "type": "cell",
            "subtype": "string",
            "col": 10,
            "row": 0 + loop.index,
            "value": declaration.depositDateReply,
            "format": "gridName",
        },
        {
            "type": "cell",
            "subtype": "string",
            "col": 11,
            "row": 0 + loop.index,
            "value": declaration.embargo,
            "format": "gridName",
        },
        {
            "type": "cell",
            "subtype": "string",
            "col": 12,
            "row": 0 + loop.index,
            "value": declaration.repository,
            "format": "gridName",
        },
        {
            "type": "cell",
            "subtype": "string",
            "col": 13,
            "row": 0 + loop.index,
            "value": declaration.whoInTheProjectIsResponsibleForThisDatasetReply,
            "format": "gridName",
        }
    ]) -%}
{%- endfor -%}
{%- do data.append({
    "type": "row",
    "col": 0,
    "row": 1 + mapping.declarations|length,
    "data": [
        "",
        "",
        "",
