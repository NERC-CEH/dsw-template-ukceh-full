        },
        {
            "type": "cell",
            "subtype": "string",
            "cell": "A5",
            "value": "Funding",
            "format": "headingLeftTop",
        },
        {
            "type": "cell",
            "subtype": "string",
            "cell": "B5",
            "value": mapping.metaDataDeclarations.funding,
